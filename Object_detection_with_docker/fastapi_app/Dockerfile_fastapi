FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install build essentials and runtime libs
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    libgl1 && \
    rm -rf /var/lib/apt/lists/*

# Copy requirements separately to leverage Docker cache
COPY requirements_fastapi.txt .

# Pre-stage critical build dependencies
RUN pip install --no-cache-dir numpy cython

# Install cython-bbox before bulk requirements
RUN pip install --no-cache-dir cython-bbox

# Install remaining packages
RUN pip install --no-cache-dir -r requirements_fastapi.txt

# Copy all FastAPI app files including models
COPY . .

# Expose FastAPI port
EXPOSE 8000

# Start the server
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]